<!DOCTYPE html>
<html lang="ro">
<head>
    <link rel="icon" type="image/png" href="https://cdn.glitch.global/59040f8f-2030-41d7-9001-7b81b2a8afc6/favicon3.png?v=1730223654493">
    <meta charset="UTF-8">
    <meta name="theme-color" content="#0d6efd">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Login</title>
    <link rel="stylesheet" href="https://stackpath.bootstrapcdn.com/bootstrap/4.5.2/css/bootstrap.min.css">
    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.0.0-beta3/css/all.min.css">
    <style>
        body {
            background-color: #ffffff;
            display: flex;
            align-items: center;
            justify-content: center;
            height: 65vh;
            margin: 0;
            padding: 1rem;
        }
        .login-container {
            background-color: #ffffff;
            padding: 2rem;
            border-radius: 8px;
            /* box-shadow: 0px 0px 20px rgba(0, 0, 0, 0.1); */
            max-width: 400px;
            width: 100%;
        }
        .login-title {
            color: #007bff;
            font-weight: bold;
            margin-bottom: 1.5rem;
            text-align: center;
        }
        .form-control {
            padding: 1rem;
            font-size: 1rem;
            border-radius: 6px;
            border: 1px solid #ced4da;
        }
        .btn-primary {
            width: 100%;
            padding: 0.75rem;
            font-size: 1rem;
            border-radius: 6px;
        }
        .btn-primary:hover {
            background-color: #0056b3;
        }
        .form-group label {
            font-weight: 600;
            color: #555;
        }
        .alert {
            margin-bottom: 1rem;
            font-size: 0.9rem;
        }
    </style>
</head>
<body>
    <div class="login-container">
        <h2 class="login-title">
            <img id="loginImage" src="https://cdn.glitch.global/59040f8f-2030-41d7-9001-7b81b2a8afc6/login_intro.gif?v=1730573521941" alt="Login" style="width: 350px; height: auto;">
        </h2>

        <!-- Afișare mesaje flash dacă există -->
        <% if (messages.error && messages.error.length > 0) { %>
          <div class="alert alert-danger" id="errorMessage">
            <%= messages.error[0] %>
          </div>
        <% } %>

        <form action="/login" method="POST">
          
          
          
            <div class="form-group">
                <label for="username">Nume utilizator</label>
              <div class="input-group">
            <div class="input-group-prepend">
                <span class="input-group-text"><i class="fas fa-user"></i></span>
            </div>
                <input type="text" class="form-control" id="username" name="username" required>
            </div>
            <div class="form-group">
                <label for="password">Parolă</label>
              <div class="input-group">
            <div class="input-group-prepend">
                <span class="input-group-text"><i class="fas fa-lock"></i></span>
            </div>
                <input type="password" class="form-control" id="password" name="password" required>
            </div>
            </div>
            <button type="submit" class="btn btn-primary">Login</button>
        </form>
    </div>

    <script>
        // Verifică dacă mesajul de eroare este afișat
        document.addEventListener("DOMContentLoaded", function() {
            const errorMessage = document.getElementById("errorMessage");
            const loginImage = document.getElementById("loginImage");

            // Schimbă imaginea dacă mesajul de eroare există
            if (errorMessage) {
                loginImage.src = "https://cdn.glitch.global/59040f8f-2030-41d7-9001-7b81b2a8afc6/login_gresit.gif?v=1730573577216";
            }
        });
    </script>
</body>
</html>
